{
    "defines": {
        "XS_MODS": 1
    },
    "include": [
        "$(MODDABLE)/examples/manifest_base.json",
        "$(MODDABLE)/examples/manifest_typings.json",
        "$(MODULES)/base/modules/manifest.json",
        "$(MODULES)/data/crc/manifest.json",
        "./drivers/manifest_driver.json",
        "./ble/manifest_ble.json",
        "./dialogues/manifest_dialogue.json",
        "./renderers/manifest_renderer.json",
        "./services/manifest_service.json",
        "./speeches/manifest_speech.json",
        "./utilities/manifest_utility.json",
        "./manifest_typings.json"
    ],
    "modules": {
        "*": [
            "./touch",
            "./robot",
            "./main"
        ],
        "default-mods/*": "./default-mods/*"
    },
    "preload": [
        "robot",
        "touch"
    ],
    "strip": [],
    "creation": {
        "static": 98304,
        "chunk": {
            "initial": 1536,
            "incremental": 512
        },
        "heap": {
            "initial": 512,
            "incremental": 64
        },
        "stack": 512,
        "keys": {
            "available": 512
        }
    },
    "config": {
        "sntp": "pool.ntp.org",
        "driver": {
            "panId": 1,
            "tiltId": 2,
            "pwmPan": 5,
            "pwmTilt": 2,
            "offsetTilt": 0,
            "offsetPan": 0
        },
        "serial": {
            "transmit": 17,
            "receive": 16
        },
        "rotation": 90
    },
    "resources": {
        "*-mask": [
            "$(MODDABLE)/examples/assets/fonts/OpenSans-Regular-24"
        ]
    },
    "bundle": {
        "id": "tech.moddable.stackchan",
        "devices": [
            "com.m5stack",
            "com.m5stack.fire",
            "com.m5stack.core2",
            "com.m5stack.cores3"
        ]
    },
    "platforms": {
        "esp32/m5stack_core2": {
            "config": {
                "driver": {
                    "pwmPan": 19,
                    "pwmTilt": 27
                },
                "tts": {
                    "sampleRate": 24000
                },
                "serial": {
                    "transmit": 14,
                    "receive": 13
                },
                "rotation": 0
            }
        },
        "esp32/m5stack_cores3": {
            "build": {
                "PARTITIONS_FILE": "./sdkconfig/customPartitions.csv"
            },
            "config": {
                "driver": {
                    "pwmPan": 19,
                    "pwmTilt": 27
                },
                "tts": {
                    "sampleRate": 24000
                },
                "serial": {
                    "transmit": 17,
                    "receive": 18
                },
                "rotation": 0,
                "virtualButton": true
            }
        }
    }
}